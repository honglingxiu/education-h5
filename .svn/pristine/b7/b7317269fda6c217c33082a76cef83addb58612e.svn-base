*{
 touch-action: none;	
}

img {
	display: block;
}

.header-form {
	position: relative;
	display: flex;
	flex-direction: column;
	padding: 40px 20px 30px 20px;
	margin: 15px;
	background: #fff;
	border-radius: 6px;
	box-shadow: #333 0 1px 4px -1px;
	margin-top: 3rem;
}

.smsCode {
	position: relative;
}

.banner {
	position: absolute;
}

.getVerCode-btn {
	float: right;
	border: none;
	color: #fff;
	font-size: 12px;
	background: #018bee;
	padding: 13px;
	cursor: pointer;
	border-radius: 5px;
	width: 35%;
}

.getVerCode-btn[disabled] {
	background: #c3c3c3;
	color: #fff;
}

.form-submit-btn {
	padding: 17px 0;
	color: #fff;
	background-color: #018bee;
	border-radius: 25px;
	cursor: pointer;
	border: none;
	z-index: 1000;
	width: 80%;
	display: block;
	position: relative;
	top: 3.7rem;
	margin: 0 auto;
}

.banner-items {
	background-color: #fff;
	height: 1.8rem;
	position: relative;
	top: 3.2rem;
	border-radius: 10px;
	width: 90%;
	text-align: center;
	padding: 10px;
	margin: 0 auto;
}

.banner-items-left {
	padding-top: 10px;
	float: left;
	border-right: 1px solid #f2f2f2;
	width: 50%;
}

.banner-items-right {
	float: right;
	width: 50%;
	padding-top: 10px;
}

.banner-items img {
	width: 2.5rem;
	height: .8rem;
	margin: 0 auto;
}

.banner-items p {
	font-size: 12px;
	color: #969696;
	padding-top: 5px;
}

.banner-items span {
	color: #fe0b1c;
}

.imglist {
	padding-top: 200px;
}

.form {
	background-color: #fff;
	position: relative;
	top: 3.4rem;
	border-radius: 10px;
	width: 90%;
	text-align: center;
	box-shadow: 0 0.32rem 0.64rem 0 rgba(0, 0, 0, 0.08);
	padding: 40px 20px 30px 20px;
	margin: 0 auto;
}

.bg {
	background: url(img/banner.png) no-repeat top;
	background-size: 100%;
	height: 8.26667rem;
	width: 100%;
	position: absolute;
	top: 0;
	z-index: -1;
}

.form img {
	width: 100%;
}

.ps {
	padding-top: 3.8rem;
	text-align: center;
	font-size: 12px;
	padding-bottom: 10px;
}

.form input,select {
	width: 100%;
	padding: 13px 0;
	color: #666;
	font-size: 14px;
	margin-bottom: 20px;
	border-radius: 4px;
	border: none;
	text-indent: 10px;
	background-color: #f5f5f5;
}

.phone-input {
	width: 63% !important;
	float: left;
}