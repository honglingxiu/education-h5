                        this.$success.open('010', '05753');
                        _paq.push(["trackEvent", "跳转成功页面", idList.channelName + "：" + idList.channelChildName]);
                    });
                } else {
                    this.$toast(result);
                }
            },
            handleScroll() {
                var scrollTop = window.pageYOffset || document.documentElement.scrollTop || document.body.scrollTop;
                if (scrollTop > 1000) {
                    //this.btnShow=true;
                    $("#dock").fadeIn(1000);
                }
